{
  "config": {
    "target": "http://localhost:3000",
    "phases": [
      {
        "duration": 60,
        "arrivalRate": 30
      }
    ],
    "defaults": {
      "headers": {
        "User-Agent": "Artillery/2.0.0"
      }
    }
  },
  "scenarios": [
    {
      "flow": [
        {
          "post": {
            "url": "/auth/login",
            "json": {
              "email": "test@test.kr",
              "password": "12341234aS!"
            }
          }
        },
        {
          "get": {
            "url": "/auth/check",
            "headers": {
              "Authorization": "Bearer {{ auth.signin.response.body.accessToken }}"
            }
          }
        }
      ]
    }
  ]
}